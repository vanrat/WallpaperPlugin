<?xml version="1.0" encoding="UTF-8"?>
 
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
           id="com.happy.plugins"
      version="1.0">
    <name>WallpaperPlugin</name>
    <description>Wallpaper Plugin</description>
    <license>MIT</license>
    <keywords>phonegap,calendar</keywords>
 
    <js-module src="www/WallpaperPlugin.js" name="WallpaperPlugin">
        <clobbers target="WallpaperPlugin" />
    </js-module>
 
    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="WallpaperPlugin">
                <param name="android-package" value="com.happy.plugins.WallpaperPlugin"/>
            </feature>
        </config-file>
		<config-file target="AndroidManifest.xml" parent="/manifest">
			<uses-permission android:name="android.permission.SET_WALLPAPER" />
		</config-file> 
        <source-file src="src/android/WallpaperPlugin.java" target-dir="src/com/happy/plugins" />     
     </platform>         
</plugin>